<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Dashboard Docente</title>

  <!-- CSS -->
  <link rel="stylesheet" href="/css/dashboard-profesor.css" />
  <link rel="stylesheet" href="/css/tablas.css" />
  <link rel="stylesheet" href="/css/modal-admin.css" />

  <!-- Flatpickr desde CDN confiable -->
  <link rel="stylesheet" href="/vendor/flatpickr/flatpickr.min.css">
  
  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  
  <!-- Font Awesome para √≠conos -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body>
  <header>
    <div class="logo-container">
      <img src="/img/logo.png" alt="Logo" class="logo" />
      <div class="header-center">
        <span class="title-top">Fundaci√≥n</span>
        <span class="title-bottom">Colegio San Viator</span>
      </div>
    </div>
    <div class="header-right">
      <span class="user-info">üë§ <%= user ? user.name : '' %> (<%= user ? user.role : '' %>)</span>
      <a href="/logout" class="btn-logout">Cerrar sesi√≥n</a>
    </div>
  </header>

  <!-- üîç FILTROS -->
  <section class="filtros">
    <div class="filtro-item">
      <label>Desde</label>
      <input type="text" id="fechaInicio" placeholder="Selecciona fecha" readonly>
      <span>‚Üí</span>
      <input type="text" id="fechaFin" placeholder="Selecciona fecha" readonly>
    </div>

    <div class="filtro-item">
      <label>Nivel</label>
      <select id="nivel">
        <option value="todos">Todos</option>
        <option value="parvularia">Parvularia</option>
        <option value="basica">B√°sica</option>
        <option value="media">Media</option>
      </select>
    </div>

    <div class="filtro-item">
      <label>Grado</label>
      <select id="grado">
        <option value="todos">Todos</option>
      </select>
    </div>

    <button class="btn-filtrar">
      <i class="fas fa-filter"></i> Filtrar
    </button>
  </section>

  <!-- üìä GRAFICOS -->
  <main class="paneles">
    <div class="panel">
      <h3>Distribuci√≥n de asistencias</h3>
      <div class="chart-container">
        <canvas id="graficoCircular"></canvas>
      </div>
    </div>

    <div class="panel">
      <h3>Asistencias por d√≠a</h3>
      <div class="chart-container">
        <canvas id="graficoLineas"></canvas>
      </div>
    </div>
  </main>

  <!-- üìã TABLAS -->
  <section class="seccion-tablas">
    <div class="tabla-panel resumen-diario">
      <h2 class="titulo-tabla">üìÖ Resumen por d√≠a</h2>
      <table id="tablaAsistencias" class="tabla-dinamica">
        <thead>
          <tr>
            <th>Fecha</th>
            <th>Asistencias</th>
            <th>Faltas</th>
            <th>% Asistencia</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td colspan="4" style="text-align:center;">Cargando datos...</td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="tabla-panel alumnos-criticos">
      <h2 class="titulo-tabla">‚ö†Ô∏è Alumnos Cr√≠ticos (menos del 50%)</h2>
      <table id="tablaCriticos" class="tabla-dinamica">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>RUT</th>
            <th>Curso</th>
            <th>Asistencias</th>
            <th>Faltas</th>
            <th>%</th>
          </tr>
        </thead>
        <tbody>
          <tr><td colspan="6" style="text-align:center;">No hay alumnos cr√≠ticos</td></tr>
        </tbody>
      </table>
    </div>
  </section>

  <!-- üõ†Ô∏è Panel admin -->
  <% if (user && user.role === 'admin') { %>
    <button id="abrirAdminPanel" class="btn-admin-open">‚öôÔ∏è Panel Admin</button>

    <div id="adminModal" class="modal">
      <div class="modal-content admin-modal-large">
        <span id="cerrarAdminPanel" class="modal-close">&times;</span>
        <h2>üõ†Ô∏è Panel de Administraci√≥n</h2>

        <!-- Pesta√±as para las diferentes secciones -->
        <div class="admin-tabs">
          <button class="tab-button active" data-tab="excel">üì§ Excel</button>
          <button class="tab-button" data-tab="docentes">üë®‚Äçüè´ Docentes</button>
          <button class="tab-button" data-tab="alumnos">üë• Alumnos</button>
          <button class="tab-button" data-tab="bloqueos">üö´ Bloqueos</button>
          <button class="tab-button" data-tab="scanner">üìü Scanner</button>
        </div>

        <!-- Contenido de pesta√±as -->
        <div class="tab-content">
          <!-- Pesta√±a Excel -->
          <div id="tab-excel" class="tab-pane active">
            <div class="admin-section">
              <h3>üì§ Subir Alumnos desde Excel</h3>
              <form id="uploadExcelForm" enctype="multipart/form-data">
                <label for="excelFile">Selecciona archivo Excel:</label>
                <input type="file" id="excelFile" name="file" accept=".xlsx,.xls" required />
                <button class="btn-admin" type="submit">
                  <i class="fas fa-upload"></i> Subir Archivo
                </button>
              </form>
            </div>
          </div>

          <!-- Pesta√±a Docentes -->
          <div id="tab-docentes" class="tab-pane">
            <div class="admin-section">
              <h3>üë®‚Äçüè´ Gesti√≥n de Docentes</h3>
              
              <!-- Formulario para agregar docente -->
              <div class="form-container">
                <h4>Agregar Nuevo Docente</h4>
                <form id="formDocente">
                  <div class="form-row">
                    <input type="text" id="docenteUsuario" placeholder="Nombre de usuario" required>
                    <input type="password" id="docentePassword" placeholder="Contrase√±a" required>
                  </div>
                  <div class="form-row">
                    <input type="text" id="docenteNombre" placeholder="Nombre completo" required>
                    <input type="email" id="docenteCorreo" placeholder="Correo electr√≥nico">
                  </div>
                  <button type="submit" class="btn-admin">
                    <i class="fas fa-plus"></i> Agregar Docente
                  </button>
                </form>
              </div>

              <!-- Lista de docentes -->
              <div class="table-container">
                <h4>Docentes Registrados</h4>
                <table id="tablaDocentes" class="admin-table">
                  <thead>
                    <tr>
                      <th>Usuario</th>
                      <th>Nombre</th>
                      <th>Correo</th>
                      <th>Estado</th>
                      <th>Acciones</th>
                    </tr>
                  </thead>
                  <tbody id="tbodyDocentes">
                    <tr><td colspan="5" style="text-align:center;">Cargando docentes...</td></tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

          <!-- Pesta√±a Alumnos -->
          <div id="tab-alumnos" class="tab-pane">
            <div class="admin-section">
              <h3>üë• Gesti√≥n de Alumnos</h3>
              
              <!-- Filtros para alumnos -->
              <div class="filtros-alumnos">
                <input type="text" id="buscarAlumno" placeholder="Buscar por RUT o nombre...">
                <select id="filtroCursoAlumno">
                  <option value="todos">Todos los cursos</option>
                </select>
                <select id="filtroNivelAlumno">
                  <option value="todos">Todos los niveles</option>
                  <option value="Parvularia">Parvularia</option>
                  <option value="B√°sica">B√°sica</option>
                  <option value="Media">Media</option>
                </select>
                <button id="btnFiltrarAlumnos" class="btn-admin-small">
                  <i class="fas fa-search"></i> Filtrar
                </button>
                <button id="btnNuevoAlumno" class="btn-admin-small btn-success">
                  <i class="fas fa-plus"></i> Nuevo Alumno
                </button>
              </div>

              <!-- Lista de alumnos -->
              <div class="table-container">
                <table id="tablaAlumnos" class="admin-table">
                  <thead>
                    <tr>
                      <th>RUT</th>
                      <th>Nombre Completo</th>
                      <th>Curso</th>
                      <th>Estado</th>
                      <th>Acciones</th>
                    </tr>
                  </thead>
                  <tbody id="tbodyAlumnos">
                    <tr><td colspan="5" style="text-align:center;">Cargando alumnos...</td></tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

          <!-- Pesta√±a Bloqueos -->
          <div id="tab-bloqueos" class="tab-pane">
            <div class="admin-section">
              <h3>üö´ Gesti√≥n de Bloqueos</h3>
              <p class="admin-info">Configura d√≠as espec√≠ficos donde no se registrar√°n faltas autom√°ticas para ciertos cursos.</p>
              
              <!-- Formulario para agregar bloqueo -->
              <div class="form-container">
                <h4>Agregar Nuevo Bloqueo</h4>
                <form id="formBloqueo">
                  <div class="form-row">
                    <select id="bloqueoCurso" required>
                      <option value="">Seleccionar curso</option>
                    </select>
                    <select id="bloqueoTipo">
                      <option value="dia_semana">D√≠a de la semana</option>
                      <option value="fecha_especifica">Fecha espec√≠fica</option>
                    </select>
                  </div>
                  <div class="form-row">
                    <select id="bloqueoDiaSemana">
                      <option value="1">Lunes</option>
                      <option value="2">Martes</option>
                      <option value="3">Mi√©rcoles</option>
                      <option value="4">Jueves</option>
                      <option value="5">Viernes</option>
                    </select>
                    <input type="date" id="bloqueoFechaEspecifica" style="display:none;">
                  </div>
                  <div class="form-row">
                    <input type="text" id="bloqueoMotivo" placeholder="Motivo del bloqueo (ej: No almuerzan los jueves)" required>
                  </div>
                  <button type="submit" class="btn-admin">
                    <i class="fas fa-lock"></i> Agregar Bloqueo
                  </button>
                </form>
              </div>

              <!-- Lista de bloqueos activos -->
              <div class="table-container">
                <h4>Bloqueos Activos</h4>
                <table id="tablaBloqueos" class="admin-table">
                  <thead>
                    <tr>
                      <th>Curso</th>
                      <th>Tipo</th>
                      <th>D√≠a/Fecha</th>
                      <th>Motivo</th>
                      <th>Acciones</th>
                    </tr>
                  </thead>
                  <tbody id="tbodyBloqueos">
                    <tr><td colspan="5" style="text-align:center;">Cargando bloqueos...</td></tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

          <!-- Pesta√±a Scanner -->
          <div id="tab-scanner" class="tab-pane">
            <div class="admin-section" style="text-align: center;">
              <h3>üìü Lector de C√≥digo de Barras</h3>
              <p>Accede al sistema de registro de asistencia por c√≥digo de barras</p>
              <a href="/scanner" class="btn-admin btn-large">
                <i class="fas fa-barcode"></i> Ir al Lector de C√≥digos
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% } %>

  <!-- JS - Cargar Flatpickr primero -->
  <script src="/vendor/flatpickr/flatpickr.min.js"></script>
  <script src="/vendor/flatpickr/es.js"></script>
  <script src="/js/dashboard.js"></script>
  <script src="/js/admin-panel.js"></script>
  
  <!-- Nuevo JS para la gesti√≥n admin -->
  <script src="/js/admin-management.js"></script>
</body>
</html>